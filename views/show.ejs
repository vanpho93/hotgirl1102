<!DOCTYPE html>
<html lang="en">
    <head>
        <base href="../">
        <title>Hot Girl</title>
        <script src="jquery.js"></script>
        <script>
            const id = "<%= id %>";
            let like = "<%= likes %>";

            $(document).ready(() => {
                $('#a-like').click((e) => {
                    e.preventDefault();
                    $.get(`/like/${id}`, data => {
                        if (data === 'THANH_CONG') {
                            $('#a-like').html(`Like ${++like}`);
                        }
                    });
                });
            });
        </script>
        <style>
            a:visited {
                color: #0000E9;
            }
            hr {
                visibility: hidden
            }
            .div-nav {
                display: flex;
                width: 300px;
                justify-content: space-between;
                align-items: center;
            }
            #wrapper {
                margin: 20px;
            }
        </style>
    </head>
    <body>
        <div id="wrapper">
            <div class="div-nav">
                <a href="/show/<%= id - 1 %>">Previous</a>
                <h3><%= name %></h3>
                <a href="/show/<%= id + 1 %>">Next</a>
            </div>
            <hr />
            <img src="images/<%= image %>">
            <hr />
            <div class="div-nav">
                <a href="#" id="a-like">Like <%= likes %></a>
                <a href="#" id="a-dislike">Dislike <%= dislikes %></a>
            </div>
        </div>
    </body>
</html>